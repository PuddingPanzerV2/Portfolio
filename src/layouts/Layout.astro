---
interface Props {
  title: string;
}

const { title } = Astro.props;

import MyLink from "../components/MyLink.astro";

const myLinks = [
  { title: "CALMNESS", href: "/CALMNESS" },
  { title: "DESTRUCTION", href: "/DESTRUCTION" },
  { title: "EXPERIMENTAL", href: "/EXPERIMENTAL" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="node_modules/lite-youtube-embed/src/lite-yt-embed.css"
    />
  </head>
  <body>
    <!-- Sticky Navigation -->
    <nav
      class="sticky top-0 w-full z-50 bg-gray-800 text-white transition-colors duration-300 ease-in-out"
    >
      <ul class="flex justify-between items-center w-full">
        {myLinks.map((x) => <MyLink title={x.title} href={x.href} />)}
      </ul>

      <slot />

      <footer class="bg-gray-800 text-white">
        <div
          class="container mx-auto py-4 px-5 flex flex-wrap flex-col sm:flex-row"
        >
          <p class="text-gray-400 text-sm">
            Made with ❤️ by
            <a class="underline" href="https://twitter.com/johannesjo"
              >Johannes</a
            >
          </p>
        </div>
      </footer>

      <script
        is:inline
        src="node_modules/lite-youtube-embed/src/lite-yt-embed.js"></script>
    </nav>
  </body>
</html>
